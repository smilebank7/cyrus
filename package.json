{
	"name": "sylas-monorepo",
	"version": "1.0.1",
	"private": true,
	"description": "Monorepo for Sylas - Linear Claude Agent integration",
	"type": "module",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"build": "bun run --filter='*' build",
		"dev": "bun run --filter='*' dev",
		"test": "bun run --filter='*' test",
		"lint": "biome check",
		"format": "biome check --write --unsafe",
		"test:packages": "bun run --filter './packages/*' test",
		"test:packages:run": "bun run --filter './packages/*' test:run",
		"test:apps": "bun run --filter './apps/*' test",
		"typecheck": "bun run --filter='*' typecheck",
		"prepare": "husky"
	},
	"keywords": [
		"linear",
		"claude",
		"linear-agent",
		"sylas",
		"anthropic",
		"ai",
		"agent",
		"monorepo"
	],
	"author": "Ceedar",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/smilebank7/sylas"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@linear/sdk": "60.0.0"
	},
	"overrides": {
		"jws": ">=4.0.1",
		"@modelcontextprotocol/sdk": ">=1.25.2",
		"semver": ">=7.5.2",
		"qs": ">=6.14.1"
	},
	"trustedDependencies": [
		"@tailwindcss/oxide",
		"core-js",
		"electron",
		"electron-winstaller",
		"esbuild",
		"sharp",
		"workerd"
	],
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json}": [
			"biome check --write --unsafe"
		]
	}
}
